<Page x:Class="BillMaker.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BillMaker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Width="1200" Height="730">

    <Grid Width="1200" Height="730">
        <Label Content="UserName" Margin="260,282,0,0" HorizontalAlignment="Left" Width="108" Height="30" VerticalAlignment="Top" RenderTransformOrigin="0.515,0.538" FontSize="18"/>
        <Label Content="Password" Margin="260,333,0,0" HorizontalAlignment="Left" Width="108" Height="30" VerticalAlignment="Top" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="390,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="passwordValue" HorizontalAlignment="Left" Height="23" Margin="390,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="loginBtn" Content="Login" HorizontalAlignment="Left" Margin="260,442,0,0" VerticalAlignment="Top" Width="108" Click="saveBtn_Click"/>
        <CheckBox x:Name="remeberDetails" Content="Remember details for today" HorizontalAlignment="Left" Margin="260,390,0,0" VerticalAlignment="Top" FontSize="18"/>
    </Grid>
</Page>
